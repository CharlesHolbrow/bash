# Charles' Shell Configuration
# To install: 
# $ echo ".bash_custom" >> .bash_profile

# Get platform
platform='unknown'
unamestr=`uname`
if [ "$unamestr" == 'Linux' ]; then
  platform='linux'
elif [ "$unamestr" == 'FreeBSD' ]; then
  platform='freebsd'
elif [ "$unamestr" == 'Darwin' ]; then
  platform='osx'
fi

# Charles' git aliases
alias ga='git add'
alias gd='git diff'
alias gs='git status'
alias gc='git commit'
alias gcm='git commit -m'

# Charles misc aliases
alias ap='ack --python'
alias aj='ack --js'
alias ll='ls -l'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../../'
alias ccat='highlight -O ansi'

if [ $platform == 'linux' ]; then
    alias ack=ack-grep # is this for linux? or only debian?
fi

# meteor ack
mack() {
  find ./ ! -path '*.build*' ! -path '*.npm*' ! -path '*.meteor*' ! -path '.git' -regex '.*\js' -o -regex '.*coffee' | ack -x $1
}

# display my aliases
alias

# Colorize ls output
if [ $platform == 'linux' ]; then
  alias ls='ls --color=auto'
elif [ $platform == 'freebsd' -o $platform == 'osx' ]; then
    alias ls='ls -G'
fi

# Custom command prompt (with colors!)
export PS1="\u@\h \[$(tput bold)\]\[$(tput setaf 1)\]\W \[$(tput setaf 2)\]$\[$(tput sgr0)\] "
export SVN_EDITOR=emacs
